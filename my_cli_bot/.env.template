# Boiler AI - Purdue CS Academic Advisor Environment Configuration

# ===================================
# AI API KEYS (REQUIRED FOR OPERATION)
# ===================================
# Primary AI Provider - OpenAI (REQUIRED)
# Use your working OpenAI API key here
OPENAI_API_KEY=your_openai_api_key_here

# Secondary AI Provider - Anthropic Claude (OPTIONAL)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Tertiary AI Provider - Google Gemini (OPTIONAL)
GEMINI_API_KEY=your_gemini_api_key_here

# Career Networking - Clado API (OPTIONAL)
# Use your working Clado API key here
CLADO_API_KEY=lk_26267cec2bcd4f34b9894bc07a00af1b

# ===================================
# DATABASE CONFIGURATION
# ===================================
DATABASE_URL=postgresql://admin:password@localhost:5432/purdue_cs
POSTGRES_USER=admin
POSTGRES_PASSWORD=password

# ===================================
# N8N WORKFLOW CONFIGURATION
# ===================================
N8N_WEBHOOK_URL=http://localhost:5678/webhook/purdue-cs
N8N_WORKFLOW_ID=purdue-cs-curriculum
N8N_PASSWORD=admin

# ===================================
# API SERVER CONFIGURATION
# ===================================
API_PORT=3000
API_CORS_ORIGIN=*

# ===================================
# SCRAPER CONFIGURATION
# ===================================
SCRAPER_TIMEOUT=30000
SCRAPER_RETRY_ATTEMPTS=3
SCRAPER_CONCURRENT=false

# ===================================
# AI SYSTEM CONFIGURATION
# ===================================
# Default AI model settings
DEFAULT_AI_MODEL=gpt-4o
FALLBACK_AI_MODEL=gpt-4o-mini
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=1000

# Token usage monitoring
ENABLE_TOKEN_MONITORING=true
MAX_TOKENS_PER_HOUR=50000
WARN_TOKEN_THRESHOLD=80

# Response caching
ENABLE_AI_RESPONSE_CACHE=true
CACHE_TTL_SECONDS=3600

# ===================================
# ERROR HANDLING & MONITORING
# ===================================
# Logging configuration
LOG_LEVEL=info
ENABLE_ERROR_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# API retry configuration
MAX_API_RETRIES=3
API_RETRY_DELAY_MS=1000
ENABLE_EXPONENTIAL_BACKOFF=true

# Health monitoring
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_MINUTES=5

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_CAREER_NETWORKING=false
ENABLE_SQL_HYBRID_MODE=true
ENABLE_MULTI_PROVIDER_FALLBACK=true
ENABLE_EMERGENCY_MODE=true

# ===================================
# SECURITY CONFIGURATION
# ===================================
# API rate limiting
ENABLE_RATE_LIMITING=true
REQUESTS_PER_MINUTE=60
REQUESTS_PER_HOUR=1000

# Input validation
ENABLE_INPUT_SANITIZATION=true
MAX_QUERY_LENGTH=2000

# ===================================
# DEVELOPMENT/PRODUCTION SETTINGS
# ===================================
NODE_ENV=development
PYTHON_ENV=development

# Performance optimization
ENABLE_PARALLEL_PROCESSING=true
MAX_CONCURRENT_REQUESTS=10
